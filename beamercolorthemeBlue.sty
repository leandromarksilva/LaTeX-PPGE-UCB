% TITLE PAGE LAYOUT (adpat as needed / according to preference)

\setbeamertemplate{title page}
{
    \vspace{16pt}    
    \begin{columns}[b]
        \column{0.015\textwidth}
        \column{0.485\textwidth}
        \begin{beamercolorbox}[left]{institute}
            \insertinstitute       
        \end{beamercolorbox}
        \column{0.4875\textwidth}
        \column{0.0125\textwidth}
    \end{columns}
    \vspace{30pt} % Increase this value to add more space before the logo box
    \vfill
    
    \begingroup     
        \begin{beamercolorbox}[center]{title}
            \usebeamerfont{title}\Huge\inserttitle
        \end{beamercolorbox}
        \vskip 3.5em\par
        \begin{beamercolorbox}[left]{subtitle}
            \usebeamerfont{subtitle}\Large\insertsubtitle
        \end{beamercolorbox}
        \vskip 2em\par
        \begin{beamercolorbox}[left]{date}
            \usebeamerfont{date}\insertdate
        \end{beamercolorbox}
        \vskip1em\par
        \begin{beamercolorbox}[left]{author}
            \usebeamerfont{author}\insertauthor
        \end{beamercolorbox}
        \vskip 3.5em\par
        \begin{columns}[b]
        \column{0.01375\textwidth}
        \column{0.48625\textwidth}
        \column{0.48625\textwidth}
        \column{0.01375\textwidth}
        \end{columns}
    \endgroup
    \vfill
    \vspace{30pt} % Increase this value to add more space after the logo box
}



